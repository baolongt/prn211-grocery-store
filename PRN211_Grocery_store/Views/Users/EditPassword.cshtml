@model PRN211_Grocery_store.Models.ViewModels.PasswordChange

@{
    ViewData["Title"] = "Change password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Change password</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditPassword" method="post">
            <div class="form-group">
                <label asp-for="newPassword" class="control-label">New password</label>
                <input asp-for="newPassword" type="password" class="form-control" />
                <span asp-validation-for="newPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="rePassword" class="control-label">Password</label>
                <input asp-for="rePassword" type="password" class="form-control" />
                <span asp-validation-for="rePassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Change password" class="col-12 btn btn-primary" />
            </div>
        </form>
    </div>
</div>

