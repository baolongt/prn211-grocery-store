@model PRN211_Grocery_store.Data.Entity.Order
@using PRN211_Grocery_store.Data.Entity;
@{
    ViewData["Title"] = "Details";
}
@functions{
    public string calculateTotal(){
        decimal total = 0;
        if (Model != null)
        {
           @foreach (var item in (ViewBag.details as ICollection<OrderDetail>))
           {
                total += (item.Product.Price * item.Quantity);  
            }
        }
        return total.ToString();
    }
}
<h1>Details</h1>

<div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <div class= "col-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (OrderDetail detail in (ViewBag.details as ICollection<OrderDetail>))
                    {
                        <td>
                            <img class="cart-img" src="@detail.Product.ImageURL" alt="@detail.ProductId"/>
                        </td>
                        <td>
                            @detail.Product.Name
                        </td>
                        <td>
                            @detail.Price
                        </td>
                        <td>
                            @detail.Quantity
                        </td>
                        <td>
                            <div>
                                @(@detail.Quantity * @detail.Price)
                            </div>
                         </td>
                    }
                </tbody>
                <tfoot>
                    <tr class="h4">
                        <td class="text-bold"></td>
                        <td class="text-bold"></td>
                        <td class="text-bold"></td>
                        <td class="text-bold">Total: </td>
                        <td>
                            @calculateTotal()
                        </td>
                        </tr>
                </tfoot>
            </table>
        </div>
    </dl>
</div>

